{{> /layout/header}}

<div class="container">

    <div class="m_pt_lg">
        <h1 class="text-center m_txt_title ">회원가입</h1>
    </div>

    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="my_error_box my_hidden">
            </div>
            <form action="/join" method="post" onsubmit="return validation()">
                <input id="username" class="my_auth_form_box_input" type="text" name="username" placeholder="Enter ID" maxlength="20" required />
                <input id="password" class="my_auth_form_box_input" type="password" name="password" placeholder="Enter PASSWORD" maxlength="20" required />
                <input id="same-password" class="my_auth_form_box_input" type="password" name="" placeholder="Check PASSWORD" maxlength="20" required />
                <input class="my_auth_form_box_input" type="text" name="phonenumber" placeholder="Enter PHONENUMBER" maxlength="20" required />
                <input class="my_auth_form_box_input" type="email" name="email" placeholder="Enter EMAIL" maxlength="60" required />
                <input class="my_auth_form_box_input" type="text" name="addr" placeholder="Enter ADDRESS" maxlength="100" required />
                <button type="submit" style="background-color: #E1E2E1; float: right; margin-top: 20px;" class="btn">회원가입</button>
            </form>

        </div>
    </div>
</div>
<script src="/js/joinform.js"></script>

{{> /layout/footer}}