{{> /layout/header}}

<div class="container">
    <br>
    <h1 class="text-center m_txt_title">회원가입</h1>
    <br>

    <div class="my_auth_box">
        <div class="my_auth_form_box">
            <div class="my_error_box my_hidden">
            </div>
            <form action="/join" method="post" onsubmit="return validation()">
                <input class="my_auth_form_box_input" type="text" name="userId" placeholder="Enter ID" maxlength="20"
                    required />
                <input class="my_auth_form_box_input" type="text" name="userName" placeholder="Enter NAME"
                    maxlength="40" required />
                <input class="my_auth_form_box_input" type="password" name="password" placeholder="Enter PASSWORD"
                    maxlength="20" required />
                <input class="my_auth_form_box_input" type="password" name="" placeholder="Check PASSWORD"
                    maxlength="20" required />
                <input class="my_auth_form_box_input" type="email" name="email" placeholder="Enter EMAIL" maxlength="60"
                    required />
                <button type="submit" style="background-color: #E1E2E1; float: right; margin-top: 20px;"
                    class="btn">회원가입</button>
            </form>

        </div>
    </div>
    <br />
</div>
