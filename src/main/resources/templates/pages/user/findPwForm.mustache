{{>/layout/header}}

<div class="mx-auto m_outer_notice_category m_box_outer m_box_auth" style="padding: 20px;">

    <div class="m_box_notice_category ">
        <h1 class="m_txt_title">비밀번호 찾기</h1>
    </div>


    <div class="m_mh_md">
        아이디와 이메일을 입력해주세요
    </div>


    <!-- 컨테이너 시작 -->
    <div>

        <!-- 비밀번호 찾기 폼 시작 -->
        <form action="/find/pw" method="post">
            <div class="m_mb_md">
                <input id="userId" type="text" class="form-control m_mb_md" placeholder="Enter Id" required
                    maxlength="20" />
                <input id="email" type="email" class="form-control" placeholder="Enter email" required maxlength="60" />
            </div>
            <div class="d-flex" style="justify-content: end;">
                <button class="btn m_bg_secondary" type="submit">다음</button>
            </div>
        </form>
        <!-- 비밀번호 찾기 폼 끝 -->
    </div>
</div>

{{>/layout/footer}}