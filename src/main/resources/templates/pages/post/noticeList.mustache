{{>/layout/header}}

<div class="container">

    <h1 class="text-center m_txt_title m_ph_lg">공지사항</h1>

{{#principal}}
    {{#userAuth}}
    <div class="m_box_right m_pb_lg">
        <button class="btn m_bg_secondary m_p_sm m_mr_md">
            <a href="/s/admin/write-form">글쓰기</a>
        </button>
        <button class="btn m_bg_secondary m_p_sm" onclick="deleteValue();">
            삭제
        </button>
    </div>
       {{/userAuth}}
    {{/principal}}

    <form action="/s/admin/notice-delete">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-1">번호</th>
                    <th class="col-6">제목</th>
                    <th class="col-2">작성자</th>
                    <th class="col-2">작성일자</th>
                    <th class="col-1">상세보기</th>
                </tr>
            </thead>

    {{#notices}}
            <tbody>
                <tr>
                    <th scope="row">{{num}}</th>
                    <td> {{boards.title}} </td>
                    <td> {{boards.user.userName}} </td>
                    <td> {{boards.formatCreateDate}}</td>
                    <td>
                        <a href="/boards/{{boards.id}}">더보기
                        </a>
                    </td>
                </tr>

            </tbody>
    {{/notices}}
        </table>

    </form>

    <div class="paging-div">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="">이전</a></li>
            <li><a class="page-link" href="">다음</a></li>
        </ul>
    </div>

</div>

<script src="/js/admin.js"></script>
<script>
    function deleteValue() {
        let url = "delete";
        let valueArr = new Array();
        let list = $("input[name='RowCheck']");
        for (let i = 0; i < list.length; i++) {
            if (list[i].checked) {
                valueArr.push(list[i].value);
            }
        }
        if (valueArr.length == 0) {
            alert("선택된 글이 없습니다");
        } else {
            let chk = confirm("정말 삭제하겠습니까?");
            $.ajax({
                url:  ,
                type: 'POST',
                traditional: true,
                data: {
                    valueArr: valueArr
                },
                success: function (jdata) {
                    if (jdata = 1) {
                        alert("삭제성공");
                        location.replace("list")
                    }
                    else {
                        alert("삭제실패");
                    }
                }
            });
        }
    }
</script>

{{>/layout/footer}}