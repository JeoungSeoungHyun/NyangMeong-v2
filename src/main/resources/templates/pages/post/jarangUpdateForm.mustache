{{> /layout/header}}

<div class="container mt-3">
    <br>
    <h1 class="text-center m_txt_title">댕냥이자랑 하기</h1>
    <br>

    <!-- 글쓰기 아우터 시작 -->

    <div class="m_mt_md">

        <!-- 글쓰기 수정 폼 시작 -->
        <form>
            {{#userAuth}}
            <input id="userId" type="hidden" value="{{id}}" />
            {{/userAuth}}
            <div class="m_mb_md">
                <input id="title" type="text" class="form-control" placeholder="Enter title" name="title"
                    value="{{boards.title}}">
            </div>
            <div class="m_mb_md">
                <textarea id="summernote" class="form-control" name="content" rows="10">
                    {{boards.content}}
                </textarea>
            </div>
            <div class="m_box_right">
                <div>썸네일 사진 등록 : <input type="file" name="thumnailFile"></div>
                <button id="btn-updateJarang" class="btn m_bg_secondary" type="button">수정완료</button>
            </div>
        </form>
        <!-- 글쓰기 수정 폼 끝 -->

    </div>
    <!-- 글쓰기 아우터  끝 -->
</div>

<script>
    $("#summernote").summernote({
        height: 500
    });
</script>

<script src="/js/boards.js"></script>

{{> /layout/footer}}