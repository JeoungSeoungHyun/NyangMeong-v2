                    <button style="background-color: #E1E2E1; float: right; margin: 10px;" type="submit"
                        class="btn">수정</button>
                    <!-- {{/auth}} -->
                    <br><br><br>

                    <!-- 댓글 시작 -->


                    <div class="card mb-2">
                        <div class="card-header bg-light">
                            <i class="fa fa-comment fa"></i> COMMENT
                        </div>
                        <div class="card-body">
